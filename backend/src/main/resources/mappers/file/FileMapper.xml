<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nullpointer.domain.file.mapper.FileMapper">

    <insert id="insertFile" parameterType="FileVo" useGeneratedKeys="true" keyProperty="fileId">
        INSERT INTO file (card_id,
                          uploader_id,
                          file_name,
                          file_path,
                          file_size,
                          created_at)
        VALUES (#{cardId},
                #{uploaderId},
                #{filePath},
                #{file_path},
                #{fileSize},
                NOW())
    </insert>

    <select id="findById" parameterType="long" resultType="FileVo">
        SELECT *
        FROM file
        WHERE file_id = #{fileId}
    </select>

    <update id="deleteById" parameterType="long">
        UPDATE file
        SET deleted_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>